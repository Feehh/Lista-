    <script src="script.js"></script>
    <script language="javascript">

      var n1, n2;
     window.alert("15-Entrar com dois valores, onde o segundo deverá ser maior que o primeiro. Caso contrário solicitar novamente apenas o segundo valor...");
      n1 = parseFloat(window.prompt("Digite o 1° valor"));
      
      n2 = parseFloat(window.prompt("Digite o 2° valor"));
      
      
     do {
       window.alert("O segundo valor deve ser maior que o primeiro.");
       n2 = parseFloat(window.prompt("Digite novamente o segundo valor:"));
      } while (n2 <= n1);

       if (n2 > n1) {
        window.alert("Tudo certo, o segundo valor é o maior.");
  
      }
      else {
      window.alert("Algo deu errado.");
      
      }
      
      </script>
