    <script language="javascript">
      var ini, soma;
      window.alert("19-Exibir a soma dos números inteiros positivos do intervalo de um a cem...");

      soma=0;
	    for ( ini= 1; ini<=100; ++ini ) 
      {
    soma = soma + ini;		
  }
    window.alert("a soma dos numeros é: " + soma);
  
