    <script language="javascript">
      
      var base, altura, resultado;
       window.alert("4-A partir dos valores da base e altura de um triângulo, calcular e exibir sua área..");
      base = window.prompt("Digite o valor da base do triângulo");
      altura = window.prompt("Digite o valor da altura do triângulo");
      resultado = (base * altura) / 2;
       window.alert("4- A área do triângulo é " + resultado);
      document.write("4- A área do triângulo é " + resultado + "<br>");

     </script>
